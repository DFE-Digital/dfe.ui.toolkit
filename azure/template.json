{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the storage account"
            }
        },
        "cdnProfileName": {
            "type": "string",
            "metadata": {
                "description": "Name of Content Delivery Network profile"
            }
        },
        "cdnEndPointName": {
            "type": "string"
        },
        "customDomainName": {
            "defaultValue": "",
            "type": "string"
        },
        "cdnProfileResourceGroup": {
            "type": "string"
        },
        "originPath": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "storage-account",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/DFE-Digital/login.dfe.infrastructure/master/Shared/storage-account.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2017-05-10",
            "name": "cdn-endpoint",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('cdnProfileResourceGroup')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/DFE-Digital/login.dfe.infrastructure/master/Shared/azure-cdn-endpoint.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cdnEndPointName": {
                        "value": "[parameters('cdnEndPointName')]"
                    },
                    "cdnProfileName": {
                        "value": "[parameters('cdnProfileName')]"
                    },
                    "originHostName": {
                        "value": "[replace(replace(reference('storage-account').outputs.PrimaryEndpoints.value.blob, 'https://', ''), '/', '')]"
                    },
                    "customDomainName": {
                        "value": "[parameters('customDomainName')]"
                    },
                    "originPath": {
                        "value": "[parameters('originPath')]"
                    }
                }
            },
            "dependsOn": [
                "storage-account"
            ]
        }
    ]
}